{
  "version": 2,
  "builds": [
    {
      "src": "JokeGPT.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/get_joke",
      "dest": "/JokeGPT.py"
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/static/(.*)",
      "dest": "/$1"  # Serve static files like CSS, JS
    }
  ]
}
